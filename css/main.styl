black = #222
green = rgb(135,163,78)
gray = rgba(170,168,168,1)
dark-green = darken(green,30%)

::selection
    background-color green
    color lighten(green, 40%)
*:not(i)
    font-family 'Roboto' !important
a 
    color green 
    &#current-page
        color green
        padding-bottom 10px
        border-bottom 7px solid green
        text-decoration none
        transform translateY(-8px)
    &:hover 
        color dark-green
        text-decoration none
        padding-bottom 3px 
        border-bottom 2px solid green
#alex-img 
    border-radius 100%
    @media (min-width: 600px)
        float right
body 
    font-size 18px
nav
    position fixed
    display block
    background-color rgba(255,255,255,0.9)
    width 100%
    z-index 1000
    ul 
        width 100%
        margin 0 auto
        text-align center
        height 50px
        li 
            display inline-block
            font-size 1.1rem
            padding-top: 13px;
            a, a:visited
                padding 10px 24%
                color black
                @media (min-width: 400px)
                    padding 10px 25px 15px 25px
                    margin-top 10px
                &:hover, &:active, &:focus
                    color green
                    padding-bottom 10px
                    border-bottom 7px solid green
                    text-decoration none
a.button-round 
    display block
    max-width 200px
    padding 15px 20px
    margin 25px auto 0 auto
    border-radius 100px
    text-transform uppercase
    text-align center
    letter-spacing 4px
    font-size 1rem
    transition all 0.2s
    &:hover, &:focus, &:active
        text-decoration none
        background-color rgba(255,255,255,0.1)
        transition all 0.3s
    &.light 
        color white
        border 2px solid white
    &.dark 
        color dark-green !important
        border 2px solid darken(green, 20%)
        &:hover, &:focus, &:active 
            background-color dark-green
            color white !important
header
    width 100%
    height 400px
    margin-bottom 0
    padding-top 130px
    background url('../img/bkg.jpg') top
    background-size cover
    text-align center
    @media (min-width: 600px)
        height 85vh
        padding-top 15%
        margin-bottom 45px
    &#small-head 
        height 200px
        padding-top 105px
        text-align center
        background-position center
        @media (min-width: 400px)
            height 230px
            padding-top 120px
        &.bkg-alt 
            background-position bottom
        h1 
            font-size 2rem
            font-weight 100
            text-transform uppercase
            letter-spacing 12px
            padding-bottom 0px 
            display inline
    h1 
        font-size 2.5rem
        text-transform uppercase
        line-height 100%
        @media (min-width: 600px)
            font-size 4.2rem
        span.big 
            font-size 3rem
            @media (min-width: 600px)
                font-size 5.5rem
    h2 
        font-size 1.5rem
        text-transform uppercase
        @media (min-width: 600px)
            letter-spacing 7px
    h1, h2
        color white
        font-weight lighter
.contain 
    margin 0 auto
    width 80%
    max-width 960px
.row 
    margin-top 35px
section 
    margin 0
    padding 30px 0
    &#about 
        text-align center
        @media (min-width: 400px)
            text-align left
        h3 
            margin-top 15px
        .resume 
            div.one.half 
                @media (max-width: 400px)
                    margin-bottom 35px
                    padding-bottom 20px
            p 
                font-size 1.1rem
                margin-bottom 25px
            h4 
                margin-bottom 15px
            h5 
                margin 0
            span.year 
                font-weight bolder 
                letter-spacing 1px 
                display block
        #skills 
            margin-top 30px
            padding 30px 0 45px 0
            text-align center !important
            background-color green
            .row 
                margin 0
                @media (min-width: 400px)
                    margin 25px 0
            h3 
                color lighten(green, 40%)
                font-size 1.5rem
            h4
                color white
                display block
            i 
                font-size 2rem
                display inline-block !important
                margin 20px 10px
                color dark-green
                vertical-align baseline
                &.fa-plus 
                    font-size 1rem
    &#name 
        text-align center
        padding 20px 0 35px 0
    &#projects
        text-align center
        img 
            max-width 250px
        a.noicon:hover 
            border 0
        a.button-round
            margin-bottom 25px
        p.description 
            font-size 1rem 
            color lighten(black, 20%)
            max-width 350px
            margin 0 auto
    &#intro 
        background-image url('../img/bkg.jpg')
        background-position bottom
        border-top 1px green solid
        border-bottom 1px green solid
        padding 65px 0
        @media (min-width: 400px)
            text-align center
        p 
            color white
    &#services 
        text-align center
        background-image url('../img/bridge.jpg')
        background-size cover 
        background-position bottom
        padding 60px 0
        div.one.third:hover 
            transition all 0.3s
            i 
                color darken(dark-green, 20%)
                transition all 0.3s
        i 
            color dark-green
            font-size 1.6rem
            margin 20px
            background-color green
            padding 20px 
            width 65px
            border-radius 100%
            text-align center
p 
    font-weight 300
span.plus 
    color green 
    transform translateY(-2px)
#plan-sketch
    width 100%
    height 30vh
    margin 10px auto 0px auto
    display block
    background-image url('../img/sketch.jpg')
    background-size contain
    background-repeat no-repeat
    background-position center
h3 
    color green 
    font-weight lighter
    display inline-block
    text-align center !important
    text-transform uppercase
    font-size 2.5rem
    letter-spacing 4px
    margin-bottom 15px
    &.alex 
        color dark-green
        margin 0
        letter-spacing 0px
        @media (min-width: 700px)
            font-size 3rem
            margin-right 5px
h4 
    font-size 1.2rem
    display inline-block
    color gray
    text-transform uppercase
    font-weight lighter
    letter-spacing 2px
    margin 0
    &.alex
        @media (min-width: 700px)
            transform translateY(-9px)
            margin-left 5px
div.one.third 
    text-align center
h5 
    margin 15px 0 20px 0
    font-size 1rem
    text-transform uppercase
    letter-spacing 2px
    color green
footer 
    padding 50px 0 90px 0
    text-align center
    background-color black
    background-image url('../img/footer.svg')
    background-position center 90%
    background-size 100%
    background-repeat repeat-x
    @media (min-width: 700px)
        background-size 500px
    p
        color darken(white, 50%)
        text-align center
        text-transform uppercase
        letter-spacing 5px
        font-size 1rem
    a  
        margin 10px
        font-size 1.6rem
        color gray !important
        &:hover 
            color green !important
            border 0
            