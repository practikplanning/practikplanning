black = #222
green = rgb(135,163,78)
gray = rgba(170,168,168,1)

::selection
	background-color green
	color ligthen(green, 30%)
*
	font-family 'Roboto' !important
	transition all 0.2s
body 
	font-size 18px
nav
	position fixed
	display block
	background-color white
	border-bottom 1px solid gray
	width 100%
	z-index 1000
	ul 
		width 100%
		margin 0 auto
		text-align center
		height 50px
		li 
			display inline-block
			font-size 1.1rem
			padding-top: 13px;
			a, a:visited
				padding 10px
				color black
				@media (min-width: 400px)
					padding 10px 25px 15px 25px
					margin-top 10px
				&:hover, &:active, &:focus
					color green
					border-bottom 3px solid green
					text-decoration none
header
	width 100%
	height 400px
	margin-bottom 45px
	padding-top 150px
	background url('../img/bkg.jpg') top
	background-size cover
	text-align center
	@media (min-width: 400px)
		height 75vh
		padding-top 15%
	h1 
		font-size 2.5rem
		@media (min-width: 600px)
			font-size 5rem
	h2 
		font-size 1.5rem
		text-transform uppercase
		@media (min-width: 600px)
			letter-spacing 7px
	h1, h2
		color white
		font-weight lighter
.contain 
	margin 0 auto
	width 80%
	max-width 960px
.row 
	margin-top 35px
section 
	margin 45px auto
	&#name 
		text-align center
		padding 20px 0
	&#intro 
		background-image url('../img/bkg.jpg')
		background-position bottom
		border-top 1px green solid
		border-bottom 1px green solid
		padding 65px 0
		@media (min-width: 400px)
			text-align center
		p 
			color white
	&#services 
		text-align center
p 
	font-weight lighter
#plan-sketch
	width 100%
	height 45vh
	margin 10px auto 25px auto
	display block
	background-image url('../img/sketch.jpg')
	background-size contain
	background-repeat no-repeat
	background-position center
h3 
	color green 
	font-weight lighter
	display inline
	text-align center !important
	text-transform uppercase
	font-size 2.5rem
	letter-spacing 4px
	&.alex 
		color darken(green, 20%) 
		margin 0
		letter-spacing 0px
		@media (min-width: 700px)
			font-size 3rem
			margin-right 5px
h4 
	font-size 1.2rem
	display inline-block
	color gray
	text-transform uppercase
	font-weight lighter
	letter-spacing 2px
	margin 0
	@media (min-width: 700px)
		transform translateY(-9px)
		margin-left 5px
div.one.third 
	text-align center
h5 
	margin 15px 0 20px 0
	font-size 1rem
	text-transform uppercase
	letter-spacing 2px
	color green
footer 
	padding 50px 0 70px 0
	background-color black
	background-image url('../img/footer.svg')
	background-position center 90%
	background-size 100%
	background-repeat repeat-x
	@media (min-width: 700px)
		background-size 500px
	p
		color darken(white, 50%)
		text-align center
		text-transform uppercase
		letter-spacing 5px
		font-size 1rem